<div id="sidebar">
  <div id="cart">
    <span id="cartprice">
        <%= pluralize(@cart.total_quantity, "item") %> <br/>
        <%= number_to_currency(@cart.total_price) %>
    </span>
    <div id="checkout">
      <% image_link = image_tag('checkout-btn.png', :alt => 'checkout') %>
      <%= link_to(image_link, "/carts/checkout") %>
    </div>
  </div>
  <%= image_tag('paypal.png', :alt => "payments by paypal", :id=> "paypal") %>
</div>

